<h1>Update Trail Information!</h1>
<%= form_with url: "/trails/#{@trail.id}", method: :patch do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name, value: @trail.name %>
  <%= form.label :paved %>
  <%= form.check_box :paved, checked: @trail.paved %>
  <%= form.label :total_length, "Total length in miles:" %>
  <%= form.text_field :total_length, value: @trail.total_length %>
  <%= form.submit "Update trail" %>
<% end %>